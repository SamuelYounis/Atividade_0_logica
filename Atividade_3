programa
{
	
	funcao inicio()
	{
		inteiro dias, horas, minutos, segundos

	 escreva("Quantos dias você viveu: ")
	 leia(dias)
	 escreva("Quantas horas: ")
	 leia(horas)
	 escreva("Quantos minutos: ")
	 leia(minutos)
	 escreva("Quantos segundos: ")
	 leia(segundos)

	 escreva(" Você viveu ", (dias * 24 * 60 * 60) + (horas * 60 * 60) + (minutos * 60) + segundos, " segundos.")
	}
}
